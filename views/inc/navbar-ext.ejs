<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
<style type="text/css">
	.admin {
		color:#fc0;
	}
	#khk-header, #khk-header * {
		box-sizing:border-box;
	}
	#khk-header {
		z-index:1000;

		position: fixed;
		top: 0px;
		left: 0px;

		background: #8A63A8;
		width: 100%;
		height: 40px;
		border-bottom: 2px solid #fc0;

		font-size: 22px;
	}
	#khk-header .khk-header-link {
		color: white;
		display: inline-block;
		height: 40px;
		text-decoration: none;
		padding-top: 8px;	
		padding-left: 4px;
		padding-right: 4px;
		border-bottom: 2px solid #fc0;
		font-size: 22px;
		font-family: "Lucida Grande", Helvetica, Arial, sans-serif;
	}
	#khk-header .khk-header-link.real:hover {
		background: #916cac;
	}
	#khk-header .khk-header-link.real:active {
		background: #785393;
	}

	#khk-header #khk-header-point {
		height: auto;
		color: white;
	}
	#khk-header #khk-header-user {
		float: right;
		display: inline-block;
	}
	#khk-header #khk-header-app {
		display: inline-block;
	}
	#khk-header-presser {
		height: 45px;
		background:white;
	}
	@media only screen and (max-width: 1080px) {
		#khk-header {
			height: 80px;
			border-bottom: 6px solid #fc0;

			font-size: 44px;
		}
		#khk-header .khk-header-link {
			height: 80px;
			padding-top: 16px;	
			padding-left: 8px;
			padding-right: 8px;
			border-bottom: 6px solid #fc0;
			font-size: 44px;
		}
		#khk-header-presser {
			height: 85px;
		}
	}
</style>
<div id="khk-header">
	<div id="khk-header-app">
		<a href="http://do.khk.org/" class="real khk-header-link">
			The Delta
		</a>
		<% if(locals.title) { %>
		<i class="fa fa-caret-right" id="khk-header-point"></i>
		<a href="#" class="<%if(logged){%>real<%}%> khk-header-link">
			<%- title %>
		</a>
		<% } %>
	</div>
	<div id="khk-header-user">
	<% if(logged){ %>
		<span class="khk-header-link">
			<% if(user.privilegeLevel == 2) { %>
				<i class="fa fa-bolt admin"></i>
			<% } %>
			<%- user.name %>
		</span>
		<a href="http://do.khk.org/signout" class="real khk-header-link">
			<i class="fa fa-sign-out"></i>
		</a>
	<% } %>
	</div>
</div>
<div id="khk-header-presser"></div>

