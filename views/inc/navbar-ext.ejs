<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
<style type="text/css">
	.admin {
		color:#fc0;
	}
	.fa-angle-right {
		transform:scale(1,1.8); /* W3C */
		-webkit-transform:scale(1,1.8); /* Safari and Chrome */
		-moz-transform:scale(1,1.8); /* Firefox */
		-ms-transform:scale(1,1.8); /* IE 9 */
		-o-transform:scale(1,1.8); /* Opera */
	}
	.clearfix {
		clear: both;
	}
	/*
	 * header
	 */
	#header {
		font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;

		position: fixed;
		top: 0px;
		left: 0px;

		background: #8A63A8;
		width: 100%;
		height: 40px;
		border-bottom: 2px solid #fc0;

		z-index: 100000;
	}

	#header-app {
		display: inline-block;
		margin: 7px;
		color: white;
		font-size: 1.4em;

	}

	#header-user {
		display: inline-block;
		margin: 4px;
		padding: 6px;

		float:right;
		color:white;
		font-size: 1.2em;
		font-weight: bold;
	}
	#header-user-out {
		display: inline-block;
		margin: 3px;
		padding: 6px;

		float: right;
		color:white;
		font-size: 1.2em;
		cursor: pointer;

		border-radius: 8px;
	}
	#header-user-out a {
		text-decoration: none;
		color: white;
	}
	#header-user-out:hover {
		background: #916cac;
	}
	#header-user-out:active {
		background: #785393;
	}
</style>
<div id="header">
	<div id="header-app">
		<span>The Delta</span>
		<% if(locals.title) { %>
			<i class="fa fa-angle-right"></i>
			<span><%- title %></span>
		<% } %>
	</div>
	<img src="">
	<% if(logged){ %>
		<div id="header-user-out">
			<a href="http://home.do.khk.org/signout">Sign Out&nbsp;<i class="fa fa-sign-out"></i></a>
		</div>
		<div id="header-user">
				<% if(user.privilegeLevel == 2) { %>
					<i class="fa fa-bolt admin"></i>
				<% } %>
				<span><%- user.name %></span>
		</div>
	<% } else { %>
		<div id="header-user-out">
			<i class="fa fa-exclamation-circle"></i>
			<a>Not signed in, access may be limited...</a>
		</div>
	<% } %>
</div>
