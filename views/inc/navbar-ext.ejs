/*
 * header
 */
#header {
	position: fixed;
	top: 0px;
	left: 0px;
	z-index:1000;
	background: #8A63A8;
	width: 100%;
	height: 40px;
	border-bottom: 2px solid #fc0;
}

#header-app {
	display: inline-block;
}
#header-user {
	display: inline-block;

	float:right;
	color:white;
	font-size: 1.2em;
	font-weight: bold;
}
#header-user-out {
	display: inline-block;

	float: right;
	color:white;
	font-size: 1.2em;
	cursor: pointer;

	border-radius: 8px;
}
#header span{
	font-size:1.2em;
	margin-top:4px;
	display:inline-block;
}
#header a {
	text-decoration: none;
	color: white;
	margin:3px;
	padding: 6px;
	font-size:1.2em;
}
#header a:hover {
	background #916cac;
}
#header a:active {
	background: #785393;
}

#header-apps {
  padding-left:0!important;
	margin-left:0!important;
}
@media only screen and (max-width: 1080px) {
	#header{
		font-size:3em;
		height:80px;
	}
	#header-user-out span {
		display:none;
	}
	#header-user-out i {
		padding-top:16px;
	}
	#header-user {
		font-size:1em;
	}
}
</style>
<div id="header">
	<div id="header-app">
		<span><a href="http://do.khk.org">The Delta</a></span>
		<% if(locals.title) { %>
			<a id="header-apps" href="#">
				<i class="fa fa-angle-right"></i>
				<span><%- title %></span>
			</a>
		<% } %>
	</div>
	<img src="">
	<% if(logged){ %>
		<div id="header-user-out">
			<a href="http://home.do.khk.org/signout"><span>Sign Out&nbsp;</span><i class="fa fa-sign-out"></i></a>
		</div>
		<div id="header-user">
				<% if(user.privilegeLevel == 2) { %>
					<i class="fa fa-bolt admin"></i>
				<% } %>
				<span><a href="#"><%- user.name %></a></span>
		</div>
	<% } else { %>
		<div id="header-user-out">
			<i class="fa fa-exclamation-circle"></i>
			<a>Not signed in, access may be limited...</a>
		</div>
	<% } %>
</div>
